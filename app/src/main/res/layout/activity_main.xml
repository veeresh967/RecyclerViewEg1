<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.veeresh.b37_recyclervieweg1.MainActivity">
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/editText1" android:hint="ENTER ACTOR NAME" android:textSize="30sp"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/editText2" android:hint="ENTER MOVIE NAME" android:textSize="30sp"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/button1" android:text="ADD" android:textSize="30sp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView1"/>
</LinearLayout>
